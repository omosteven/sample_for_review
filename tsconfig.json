{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src", // Set baseUrl to the source directory
    "paths": {
      "app/*": ["app/*"], // Alias for app directory
      "@controllers/*": ["app/controllers/*"],
      "@models/*": ["app/models/*"],
      "@helpers/*": ["app/helpers/*"],
      "@enums/*": ["app/enums/*"],
      "@middleware/*": ["app/middleware/*"],
      "@routes/*": ["app/routes/*"],
      "@types/*": ["app/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
